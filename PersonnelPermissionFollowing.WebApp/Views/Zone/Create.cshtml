@model PersonnelPermissionFollowing.Entities.Zones

@{
    ViewBag.Title = "Mıntıka Ekle";
}

<div class="row">
    <div class="col-md-12">
        <p class="display-4 border-bottom"></p>
        <h4>@ViewBag.Title</h4>
        <hr />
    </div>
</div>

<div class="row">
    <div class="col-md-8 col-offset-2">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-group row">
                <div class="col-md-12">
                    @Html.ValidationSummary(false)
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "col-form-label font-weight-bold col-md-1" })
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control col-md-11" } })
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.PersonnelsId, htmlAttributes: new { @class = "col-form-label font-weight-bold col-md-1" })
                @Html.DropDownListFor(m => m.PersonnelsId, (List<SelectListItem>)ViewBag.PersonnelAmirSefList, "Lütfen personel seçiniz", new { @class = "dropdown form-control pull-left" })
            </div>

            <div class="form-group row">
                <div class="col-md-8 col-md-offset-2 text-right">
                    <button type="submit" class="btn btn-success" title="Ekle"> <span class="glyphicon glyphicon-ok mr-2"></span> Ekle</button>
                    <a href="/Zone/Index" class="btn btn-default" title="Geri Dön"><span class="glyphicon glyphicon-arrow-left mr-2"></span> Geri Dön</a>
                </div>
            </div>

        }
    </div>
</div>

