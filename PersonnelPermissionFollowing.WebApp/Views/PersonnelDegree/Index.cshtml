@model IEnumerable<PersonnelPermissionFollowing.Entities.PersonnelDegrees>

@{
    ViewBag.Title = "Eğitim Durumları";
}

<div class="row">
    <div class="col-md-12">
        <p class="display-4 border-bottom"></p>
        <h4>@ViewBag.Title</h4>
        <hr />
    </div>
</div>

<p>
    <a href="/PersonnelDegree/Create" class="btn btn-primary" title="Yeni Eğitim Durumu Ekle"><span class="glyphicon glyphicon-plus mr-2"></span> Yeni Eğitim Durumu Ekle</a>
</p>

<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-striped table-hover table-sm" id="myTable">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ModifiedUsername)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CreatedOnDatetime)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ModifiedOnDatetime)
                    </th>
                    <th>İşlemler</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ModifiedUsername)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreatedOnDatetime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ModifiedOnDatetime)
                        </td>
                        <td class="text-left">
                            <a href="/PersonnelDegree/Edit/@item.Id" class="btn btn-warning btn-sm" title="Güncelle"><span class="glyphicon glyphicon-edit mr-2"></span></a>
                            <a href="/PersonnelDegree/Delete/@item.Id" class="btn btn-danger btn-sm" title="Sil"> <span class="glyphicon glyphicon-trash mr-2"></span></a>
                            <a href="/PersonnelDegree/Details/@item.Id" class="btn btn-default btn-sm" title="Detay"> <span class="glyphicon glyphicon-search mr-2"></span></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<script src="~/Scripts/jquery-3.5.1.min.js"></script>
<script src="~/Scripts/customDatatables.js"></script>