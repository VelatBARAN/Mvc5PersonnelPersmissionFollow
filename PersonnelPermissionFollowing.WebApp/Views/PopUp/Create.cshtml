@model PersonnelPermissionFollowing.Entities.PopUps

@{
    ViewBag.Title = "PopUp Ekleme";
}

<div class="row">
    <div class="col-md-12">
        <p class="display-4 border-bottom"></p>
        <h4>@ViewBag.Title</h4>
        <hr />
    </div>
</div>

<div class="row">
    <div class="col-md-8 col-offset-2">
        @using (Html.BeginForm("Create", "PopUp", FormMethod.Post, new { @enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

        <div class="row">
            <div class="col-md-3">
                <div class="custom-file">
                    <input type="file" class="custom-file-input" name="PopUpImage" id="PopUpImage" aria-describedby="ProfileImageAddon" accept=".png,.jpg,.jpeg">
                    <label class="custom-file-label" for="PopUpImage">Dosya Seçiniz</label>
                </div>
                <i class="fa fa-info-circle mr-2"></i>
                <small><i>Lütfen .jpg, .png ya da .jpeg formatı kullanın</i></small>
            </div>

            <div class="col-md-9">
                @Html.ValidationSummary(false)
                <div class="form-group">
                    <div class="form-group row">
                        @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "col-form-label font-weight-bold col-md-1" })
                        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control col-md-11 pull-right" } })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(model => model.IsActive, htmlAttributes: new { @class = "col-form-label font-weight-bold col-md-2" })
                    <div class="col-md-10" style="margin-top:-12px;">
                        <div class="checkbox">
                            <input class="check-box" data-val="true" style="width:20px;height:20px" id="IsActive" name="IsActive" type="checkbox" value="true">
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-12 text-right">
                    <button type="submit" class="btn btn-success" title="Ekle"> <span class="glyphicon glyphicon-ok mr-2"></span> Ekle</button>
                    <a href="/PopUp/Index" class="btn btn-default" title="Geri Dön"><span class="glyphicon glyphicon-arrow-left mr-2"></span> Geri Dön</a>
                </div>
            </div>

        </div>


        }
    </div>
</div>

