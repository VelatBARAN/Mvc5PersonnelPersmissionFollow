@using PersonnelPermissionFollowing.Entities.ValueObjects
@using PersonnelPermissionFollowing.WebApp.Models
@model ChangePasswordViewModel

@{
    ViewBag.Title = "Kullanıcı Şifre Değiştirme Sayfası";
}

<div class="row">
    <div class="col-md-12">
        <p class="display-4 border-bottom"></p>
        <h4>@ViewBag.Title</h4>
        <hr />
    </div>
</div>

@using (Html.BeginForm("UserChangePassword", "User", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group row">
        <div class="col-md-12">
            @Html.ValidationSummary(false)
            @{
                if (ViewBag.ChangePassword != null)
                {
                    <h4 style="color:green" class="glyphicon glyphicon-ok-sign"> @ViewBag.ChangePassword</h4>
                }
            }
        </div>
    </div>

    <div class="form-horizontal">

        <div class="form-group row">
            @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "col-form-label font-weight-bold col-md-2" })
            @*@Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control col-md-10" ,disabled="true",type="text"} })*@
            <input type="text" value="@CurrentSession.User.Username" name="Username" class="form-control col-md-10" readonly/>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "col-form-label font-weight-bold col-md-2" })
            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control col-md-10", type = "password" } })
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.RePassword, htmlAttributes: new { @class = "col-form-label font-weight-bold col-md-2" })
            @Html.EditorFor(model => model.RePassword, new { htmlAttributes = new { @class = "form-control col-md-10", type = "password" } })
        </div>

        <div class="form-group row">
            <div class="col-md-9 col-offset-1 text-right">
                <button type="submit" class="btn btn-success" title="Değiştir"> <span class="glyphicon glyphicon-floppy-saved mr-2"></span> Değiştir</button>
                <a href="/User/ShowUserProfile" class="btn btn-default" title="Geri Dön"><span class="glyphicon glyphicon-arrow-left mr-2"></span> Geri Dön</a>
            </div>
        </div>
    </div>
}

