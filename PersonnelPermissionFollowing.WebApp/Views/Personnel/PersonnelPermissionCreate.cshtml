@using PersonnelPermissionFollowing.Entities
@model PersonnelPermissionRequest

@{
    ViewBag.Title = "Personel İzin Verme";
}

<div class="row">
    <div class="col-md-12">
        <p class="display-4 border-bottom"></p>
        <h4>@ViewBag.Title</h4>
        <hr />
    </div>
</div>

@using (Html.BeginForm("PersonnelPermissionCreate", "Personnel", FormMethod.Post))
{
    @Html.AntiForgeryToken();

    <div class="form-group row">
        <div class="col-md-12">
            @Html.ValidationSummary(false)
        </div>
    </div>

    <div class="media">
        <div class="row">
            <div class="col-md-3">
                <img src="~/Images/@ViewBag.PersonnelImage" class="img-rounded img-responsive" height="200" width="200" alt="...">
            </div>
            <div class="col-md-7 col-offset-1">
                <div class="media-body">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <label class="input-group-text col-form-label">Adı ve Soyadı</label>
                        </div>
                        <input class="form-control" readonly value="@ViewBag.PersonnelNameSurname" />
                    </div><br />
                    <input type="text" name="PersonnelsId" value="@ViewBag.PersonnelsId" hidden />
                    <br />
                    @Html.LabelFor(model => model.PersonnelPermissionTipsId, htmlAttributes: new { @class = "col-form-label" })
                    @Html.DropDownListFor(m => m.PersonnelPermissionTipsId, (SelectList)ViewBag.PermissionTip, "İzin tipi seçiniz", new { @class = "dropdown form-control" })
                    <br />
                    @Html.LabelFor(model => model.NumberofDays, htmlAttributes: new { @class = "col-form-label" })
                    @Html.EditorFor(model => model.NumberofDays, new { htmlAttributes = new { @class = "form-control" } })
                    <br /><br />
                    @Html.LabelFor(model => model.PermissionStartDatetime, htmlAttributes: new { @class = "col-form-label" }) <br />
                    @Html.EditorFor(model => model.PermissionStartDatetime, new { htmlAttributes = new { @class = "form-control date-picker", type = "date" } })
                    <br /><br />
                    @Html.LabelFor(model => model.PermissionEndDatetime, htmlAttributes: new { @class = "col-form-label" }) <br />
                    @Html.EditorFor(model => model.PermissionEndDatetime, new { htmlAttributes = new { @class = "form-control date-picker", type = "date" } })
                    <br />
                </div>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-4 col-offset-4 pull-right">
                <button type="submit" class="btn btn-success" title="Kaydet"> <span class="glyphicon glyphicon-floppy-save"> Kaydet</span></button>
                <a href="/Personnel/Index" class="btn btn-danger" title="İptal"> <span class="glyphicon glyphicon-floppy-remove"> İptal</span></a>
            </div>
        </div>
    </div>
}

<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
<script src="~/Scripts/datetime.js"></script>
