@using PersonnelPermissionFollowing.Entities
@model Personnels

@{
    ViewBag.Title = "Personel Ekleme";
}

<div class="row">
    <div class="col-md-12">
        <p class="display-4 border-bottom"></p>
        <h3>@ViewBag.Title</h3>
        <hr />
    </div>
</div>

<div class="row">
    <div class="col-md-8 col-offset-2">
        @using (Html.BeginForm("Create", "Personnel", FormMethod.Post, new { @enctype = "multipart/form-data" }))
        {

            @Html.AntiForgeryToken()

            <div class="form-group row">
                <div class="col-md-12">
                    @Html.ValidationSummary(false)
                </div>
            </div>

            <div class="row">
                <div class="col-md-2">
                    &nbsp;
                </div>

                <div class="col-md-10">
                    <div class="form-group row">
                        @Html.LabelFor(model => model.Tc, htmlAttributes: new { @class = "col-form-label font-weight-bold col-md-2" })
                        @Html.EditorFor(model => model.Tc, new { htmlAttributes = new { @class = "form-control col-md-1 pull-right", type = "number", } })
                    </div>

                    <div class="form-group row">
                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "col-form-label font-weight-bold col-md-2" })
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control col-md-10 pull-right" } })
                    </div>

                    <div class="form-group row">
                        @Html.LabelFor(model => model.Surname, htmlAttributes: new { @class = "col-form-label font-weight-bold col-md-2" })
                        @Html.EditorFor(model => model.Surname, new { htmlAttributes = new { @class = "form-control col-md-10 pull-right" } })
                    </div>

                    <div class="form-group row">
                        @Html.LabelFor(model => model.StartToJobDateTime, htmlAttributes: new { @class = "col-form-label font-weight-bold col-md-2" })
                        @Html.EditorFor(model => model.StartToJobDateTime, new { htmlAttributes = new { @class = "form-control col-md-11 pull-right",type="date"} })
                    </div>

                    <div class="form-group row">
                        @Html.LabelFor(model => model.PersonnelDegreesId, htmlAttributes: new { @class = "col-form-label font-weight-bold col-md-2" })
                        @Html.DropDownListFor(m => m.PersonnelDegreesId, (SelectList)ViewBag.PersonnelDegreeList, "Lütfen eğitim durumu seçiniz", new { @class = "dropdown form-control pull-right" })
                    </div>

                    <div class="form-group row">
                        @Html.LabelFor(model => model.PersonnelTasksId, htmlAttributes: new { @class = "col-form-label font-weight-bold col-md-2" })
                        @Html.DropDownListFor(m => m.PersonnelTasksId, (SelectList)ViewBag.PersonnelTaskList, "Lütfen personel görevi seçiniz", new { @class = "dropdown form-control pull-right" })
                    </div>

                    <div class="form-group row">
                        @Html.LabelFor(model => model.PersonnelPositionsId, htmlAttributes: new { @class = "col-form-label font-weight-bold col-md-2" })
                        @Html.DropDownListFor(m => m.PersonnelPositionsId, (SelectList)ViewBag.PersonnelPositionList, "Lütfen personel unvanı seçiniz", new { @class = "dropdown form-control pull-right" })
                    </div>

                    <div class="form-group row">
                        @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "col-form-label font-weight-bold col-md-2" })
                        @Html.TextAreaFor(model => model.Description, new { htmlAttributes = new { @class = "form-control col-md-10 pull-right", rows = "3", cols = "10" } })
                    </div>

                    <div class="form-group row">
                        <div class="col-md-12 text-right">
                            <button type="submit" class="btn btn-success" title="Ekle"> <span class="glyphicon glyphicon-ok mr-2"></span> Ekle</button>
                            <a href="/Personnel/Index" class="btn btn-default" title="Geri Dön"><span class="glyphicon glyphicon-arrow-left mr-2"></span> Geri Dön</a>
                        </div>
                    </div>

                </div>
            </div>
        }
    </div>
</div>
